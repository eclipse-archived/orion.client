{
    "node-debug": {
        "repository": "https://github.com/Microsoft/vscode-node-debug.git",
        "ignore": "extensionHost",
        "templates": [
            {
                "name": "Default",
                "program": "${workspaceRoot}/server.js",
                "cwd": "${workspaceRoot}"
            }
        ]
    },
    "python": {
        "repository": "https://github.com/DonJayamanne/pythonVSCode.git",
        "build": "tsc",
        "templates": [
            {
                "name": "Default",
                "program": "${workspaceRoot}/main.py",
                "pythonPath": "python",
                "cwd": "${workspaceRoot}",
                "debugOptions": [
                    "WaitOnAbnormalExit",
                    "WaitOnNormalExit",
                    "RedirectOutput"
                ]
            }
        ]
    },
    "vscode-lldb": {
        "repository": "https://github.com/vadimcn/vscode-lldb.git",
        "build": "tsc",
        "templates": [
            {
                "name": "Default",
                "program": "${workspaceRoot}/<your program>",
                "args": [],
                "cwd": "${workspaceRoot}"
            }
        ]
    },
    "java": {
        "repository": "https://github.com/DonJayamanne/javaVSCode.git",
        "build": "tsc",
        "templates": [
            {
                "name": "Default",
                "startupClass": "${workspaceRoot}/Program.java",
                "cwd": "${workspaceRoot}",
                "options": [
                    "-classpath",
                    "${workspaceRoot}"
                ]
            }
        ]
    }
}
